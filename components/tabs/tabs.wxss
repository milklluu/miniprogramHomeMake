/* components/tabs/tabs.wxss */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
} 
.tabs{
  display: flex;
  
}
.tab-item{
  flex:1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.divider{
  margin-top:10rpx;
  height:6rpx;
  width:50rpx;
  background-color:#f3d066 ;
}
.tab-label{
  color:#888;
  white-space: none;
}
.active-tab{
  color:#333;
  font-weight: bold;
}

.tab-panel{
  flex:1;
}